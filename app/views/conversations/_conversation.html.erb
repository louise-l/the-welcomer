<div>
  Chatting with <%= conversation.with(current_user).first_name %> <%= conversation.with(current_user).last_name %>
  <br>
  <% if conversation.messages == [] %>
    <em>No message yet</em>
  <% else %>
    Last Message : <em><%= conversation.messages.last.content.truncate(50) %></em>
  <% end %>
  <br>
  <p class="text-right"> <%= link_to 'View conversation', company_conversation_path(current_user.company.name, conversation, anchor: "message-#{conversation.messages.size}"), class:"button color-yellow text-right" %> </p>
  <hr>
</div>