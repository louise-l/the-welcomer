<div class="container">
  <% @missions.each do |mission| %>
    <p> <%= mission.name %></p>
    <p> <%= mission.description %></p>
    <p> <%= mission.status %></p>
    <%= link_to "Edit", edit_user_mission_path(@user, mission), class: 'button color-yellow'  %>
    <%= link_to "Destroy", user_mission_path(@user, mission), method: :delete, class: 'button color-red'  %>
  <% end %>
</div>

<%= link_to 'Add a mission',new_user_mission_path(@user), class: 'button color-yellow'  %>
