<div class="container">
  <div class="form">
    <h2>Edit <%= @user.first_name %>'s mission </h2>
    <%= simple_form_for [@user, @mission], remote: true do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :status %>
      <%= f.button :submit, class: 'button color-yellow' %>
    <% end %>

  </div>
</div>
