    <!-- Documents -->
    <div class='documents-section card-dashboard'>
      <%= link_to company_personal_libraries_path(@company, @user) do %>
        <h2>Documents</h2>
      <% end %>
      <%@personal_libraries.each do |library| %>
      <p> <%= library.label %> : <%= library.status %></p>
      <% end %>
