      <% else %>
        <p>There are no habits yet !</p>
      <% end %>
      <% if current_user.role =='Manager' %>
        <%= link_to company_new_user_habit_path(@company, @user), class: 'button color-yellow edit-habit' do %>
          <i class="fas fa-pen"></i>
        <% end %>
      <% end %>
    </div>
